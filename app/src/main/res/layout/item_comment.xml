<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/item_comm_caver"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <TextView
            android:id="@+id/item_comm_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/item_comm_caver"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="sdfsd" />
s

    </RelativeLayout>


    <TextView
        android:id="@+id/item_comm_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="left"
        android:minLines="3"
        android:text="sdfsd"
        android:textColor="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/item_comm_rating"
            android:gravity="center_vertical"
            android:text="评分：" />

        <TextView
            android:id="@+id/item_comm_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:text="" />

        <TextView
            android:id="@+id/item_comm_time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="sdfsd" />
    </RelativeLayout>

</LinearLayout>