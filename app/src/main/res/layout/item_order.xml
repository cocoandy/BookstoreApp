<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_order_id"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:text="" />
        <TextView
            android:id="@+id/item_order_time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:text="" />
        <View
            style="@style/line"
            android:layout_below="@+id/item_order_id" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/item_order_books"/>
    </RelativeLayout>

    <View
        style="@style/line"
        android:layout_below="@+id/item_order_id" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recycle"
        android:gravity="right"
        android:padding="8dp">

        <TextView
            android:id="@+id/contrl_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:background="@drawable/shape_btn_w_8"
            android:text="支付" />

        <TextView
            android:id="@+id/contrl_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:background="@drawable/shape_btn_w_8"
            android:text="确认收货" />

        <TextView
            android:id="@+id/contrl_comm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:background="@drawable/shape_btn_w_8"
            android:text="评论" />

        <TextView
            android:id="@+id/contrl_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:background="@drawable/shape_btn_w_8"
            android:text="退款" />

        <TextView
            android:id="@+id/contrl_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:background="@drawable/shape_btn_w_8"
            android:text="取消退款" />

    </LinearLayout>

</LinearLayout>
