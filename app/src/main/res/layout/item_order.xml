<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorInactive">

        <TextView
            android:id="@+id/item_order_id"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/item_order_stadus"
            android:gravity="center_vertical"
            android:text="" />

        <TextView
            android:id="@+id/item_order_stadus"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="" />

        <View
            style="@style/line"
            android:layout_below="@+id/item_order_id" />

        <TextView
            android:id="@+id/item_order_time"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/item_order_total"
            android:layout_alignBottom="@+id/item_order_total"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:text="" />

        <TextView
            android:id="@+id/item_order_total"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/item_order_stadus"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/red" />

        <View
            style="@style/line"
            android:layout_below="@+id/item_order_time" />
    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recycle"
        android:padding="8dp"
        android:background="@color/colorInactive">

        <TextView
            android:id="@+id/contrl_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:background="@drawable/shape_btn_bg_8"
            android:text="支付" />

        <TextView
            android:id="@+id/contrl_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:background="@drawable/shape_btn_bg_8"
            android:text="确认收货" />

        <TextView
            android:id="@+id/contrl_comm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:background="@drawable/shape_btn_bg_8"
            android:text="评论" />

        <TextView
            android:id="@+id/contrl_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:background="@drawable/shape_btn_bg_8"
            android:text="退款" />

        <TextView
            android:id="@+id/contrl_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:background="@drawable/shape_btn_bg_8"
            android:text="取消退款" />

    </LinearLayout>

</RelativeLayout>
