<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/book_statu"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_statu" />

        <include layout="@layout/item_books" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_crl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="#d1d2d2"
        android:gravity="right"
        android:padding="5dp">


        <TextView
            android:id="@+id/popu_agree"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/shape_text_bg_8"
            android:gravity="center"
            android:text="图书上架" />

        <TextView
            android:id="@+id/popu_disagree"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/shape_text_bg_8"
            android:gravity="center"
            android:text="图书下架" />

        <TextView
            android:id="@+id/popu_updata"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/shape_text_bg_8"
            android:gravity="center"
            android:text="信息修改"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>