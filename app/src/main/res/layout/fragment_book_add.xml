<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_cover"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_text_bg_5"
                android:src="@drawable/ic_logo" />

            <EditText
                android:id="@+id/et_book_name"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/img_cover"

                android:background="@drawable/shape_text_bg_5"
                android:hint="书名" />

            <EditText
                android:id="@+id/et_book_author"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/et_book_name"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/img_cover"
                android:background="@drawable/shape_text_bg_5"
                android:hint="作者" />


            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/et_book_author"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/img_cover"
                android:background="@drawable/shape_text_bg_5"
                android:overlapAnchor="false"
                android:spinnerMode="dropdown" />

            <EditText
                android:id="@+id/et_book_press"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/img_cover"
                android:layout_marginBottom="5dp"
                android:background="@drawable/shape_text_bg_5"
                android:hint="出版社" />

            <EditText
                android:id="@+id/et_book_price"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/et_book_press"
                android:layout_marginBottom="5dp"
                android:background="@drawable/shape_text_bg_5"
                android:hint="价格" />
        </RelativeLayout>

        <EditText
            android:id="@+id/et_book_resume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape_text_bg_5"
            android:gravity="left"
            android:hint="作者简介"
            android:minLines="6" />

        <EditText
            android:id="@+id/et_book_intra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape_text_bg_5"
            android:gravity="left"
            android:hint="介绍"
            android:minLines="6" />

        <EditText
            android:id="@+id/et_book_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape_text_bg_5"
            android:gravity="left"
            android:hint="目录"
            android:minLines="6" />

        <Button
            android:id="@+id/book_type_submit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_btn_bg_8"
            android:text="确                 定"
            android:textSize="18dp" />
    </LinearLayout>
</ScrollView>